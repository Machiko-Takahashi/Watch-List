<div class="container">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= @list.photo.attached? ? cl_image_path(@list.photo.key, crop: :fill) : image_path("chicago.jpg", width: 400, height: 300, crop: :fill) %>)">
    <div class="container">
      <h1><%= "Best #{@list.name}" %></h1>
      <div class="mt-4"><%= link_to "Add a movie to this list", new_list_bookmark_path(@list), class: "btn btn-banner" %></div>
    </div>
  </div>








  <h1><%= @list.name %></h1>
  <div>
    <%= link_to 'Add a movie to this list', new_list_bookmark_path(@list) %>
  </div>

  <div class="cards">
      <% @list.bookmarks.each do |bookmark| %>

    <div class="card">

      <%= image_tag bookmark.movie.poster_url, alt: "poster" %>
      <div class="card-body">
        <h5><%= bookmark.movie.title %></h5>
        <p><%= bookmark.movie.overview %></p>
        <p><em><%= "'#{bookmark.comment}'" %></em></p>
        <p><strong><%= "Rating: #{bookmark.movie.rating}" %></strong></p>
        <div class="card-body-icon">
          <%= link_to bookmark_path(bookmark), method: :delete, data: { confirm: 'Are you sure you want to remove this movie?' } do %>
            <i class="fas fa-minus-circle"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
   <br>
  <%= link_to 'Go back to lists page', lists_path %>
</div>



