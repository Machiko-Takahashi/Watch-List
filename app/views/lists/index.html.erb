<div class="index-container">

  <div class="banner px-5">
    <div class="banner-img" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(assets/dvds-couch.jpg);">
      <div class="page-title">
        <h1>Cinema Library</h1>
        <p>Make your own movie selection</p>
      </div>
    </div>
  </div>

  <div class="card-section">
    <h1>Your selections</h1>
    <div class="card-container">
      <% @lists.each do |list| %>
        <div class="card-category">
         <%= list.photo.attached? ? cl_image_tag(list.photo.key, height: 300, width: 400, crop: :fill) : "No photo!" %>
          <h3><%= link_to list.name, list_path(list) %></h3>

        </div>
      <% end %>
    </div>

    <%= link_to 'create a selection', new_list_path, class: "btn btn-list mt-4"  %>

  </div>
</div>



