<div class="container">
  <h1><%= "Add a movie to #{@list.name}" %></h1>
  <br>

  <%= simple_form_for [ @list, @bookmark ] do |f| %>
    <%= f.association :movie %>
    <%= f.input :comment %>
    <div class="d-flex justify-content-between pt-4">
      <%= link_to 'Go back to the list', list_path(@list) %>
      <%= f.submit "Add this movie", class: "btn btn-primary" %>
    </div>
  <% end %>

  <br>

</div>




